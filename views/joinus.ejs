<style>/* styles.css */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f7fc;
    color: #333;
    margin: 0;
    padding: 0;
}

header {
    background-color: #95afc0;
    color: white;
    text-align: center;
    padding: 50px 0;
}

header h1 {
    font-size: 2.5em;
}

header p {
    font-size: 1.2em;
}

.form-section {
    max-width: 600px;
    margin: 0 auto;
    margin-top: 110px;
    margin-bottom: 50px;
    padding: 20px;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

form {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

label {
    font-weight: bold;
}

input, select, textarea {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1em;
}

textarea {
    resize: vertical;
}

button {
    background-color: #95afc0;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1.1em;
}

button:hover {
    background-color: #779da6;
}

footer {
    text-align: center;
    padding: 20px;
    background-color: #333;
    color: white;
}
</style>

<link rel="stylesheet" href="/stylesheets/style.css" />
<section class="form-section">
    <h1 class="text-center fw-bold">Join us</h1>
    <form action="/index/submit-join-us" method="POST" enctype="multipart/form-data">
        <% if (typeof req.query.message_type !== 'undefined' || typeof req.query.message_text !== 'undefined'  ){ %>
            <div class="alert alert-<%= req.query.message_type %> text-dark  ">
                <%= req.query.message_text %>
            </div>
        <% } %>
        <label class="d-none" for="id">Application ID:</label>
        <input type="hidden" id="id" name="id"  placeholder="Enter application ID">

        <label for="name">Full Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your full name">

        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email"  placeholder="Enter your email address">

        <label for="position">Position Applied For:</label>
        <select id="position" name="position" >
            <option value="">Select Position</option>
            <option value="developer">Web Developer</option>
            <option value="designer">UI/UX Designer</option>
            <option value="marketing">Marketing Specialist</option>
            <option value="support">Customer Support</option>
        </select>

        <label for="resume">Upload Resume:</label>
        <input type="file" id="resume" name="resume"  accept=".pdf,.doc,.docx">

        <label for="application_data">Application Data:</label>
        <textarea id="application_data" name="application_data" rows="5"  placeholder="Why do you want to join us?"></textarea>

        <button type="submit">Submit Application</button>
    </form>
</section>
