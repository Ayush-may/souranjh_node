<div class="d-flex align-items-center container flex-column gap-3" style="padding-top: 100px; max-width: 90%;">
  <h1 class="text-center w-100 text-uppercase fw-bold">
    <%= title %>
  </h1>
  
  <p class="text-center text-capitalize" style="font-size: 1.5rem; font-weight: 300;">
    <%= data.description %>
  </p>
  <div class="rounded shadow flex-grow-1" style="max-height: 300px; overflow: hidden;">
    <img src="<%= data.details_img %>" class="w-100 h-100" style="object-fit: cover; transform: translateY(-10%);">
  </div>
  <div class="text-center mt-3" style="font-size: 1.25rem; font-weight: 400;">
    <%= data.full_description %>
  </div>
</div>
