<style>
  /* CSS styles directly in the HTML file */
  body,
  html {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
  }

  /* Header Styles */
  header {
    background-color: #4bcffa;
    padding: 20px 0;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 10;
  }

  /* Menu Styles */
  .menu {
    list-style: none;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .menu li {
    display: inline-block;
  }

  .menu a {
    color: white;
    text-decoration: none;
    padding: 10px 15px;
    font-size: 1.2rem;
    transition: color 0.3s;
  }

  .menu a:hover {
    color: #95afc0;
  }

  /* Search Icon and Input Styles */
  .search-container {
    display: flex;
    align-items: center;
  }

  .search-input {
    padding: 8px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-right: 10px;
    /* Space between input and button */
  }

  .search-icon {
    background-color: #95afc0;
    border: none;
    color: white;
    padding: 8px;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 4px;
  }

  /* Search Icon Hover Effect */
  .search-icon:hover {
    background-color: #7f97b0;
  }

  /* About Section Styles */
  #about {
    padding: 100px 20px;
    background-color: #f0f4f8;
    /* Light background color for the section */
    text-align: center;
  }

  #about h1 {
    font-size: 2.5rem;
    color: #333;
    /* Dark color for the heading */
    margin-bottom: 20px;
    font-weight: bold;
  }

  .about-content {
    max-width: 800px;
    margin: 0 auto;
    /* Center the content */
    padding: 20px;
  }

  .about-text {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    /* Soft shadow for a subtle 3D effect */
  }

  .about-text p {
    font-size: 1.1rem;
    color: #555;
    /* Medium color for text */
    line-height: 1.6;
  }

  .about-text p strong {
    font-size: 1.2rem;
    color: #4bcffa;
    /* Accent color for the title text */
  }
</style>

<!-- About Section -->
<section id="about" style="padding-top: 100px;">
  <h1>ABOUT US</h1>
  <div class="about-content">
    <div class="about-text">
      <p><strong>
          <%= aboutData.title %>
        </strong></p>
      <p>
        <%= aboutData.description %>
      </p> <!-- This will display the description -->
    </div>
  </div>
</section>