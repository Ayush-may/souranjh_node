<!-- Visitor Counter -->
<section class="visitor-counter">
  <h2>Total Visitors:</h2>
  <span class="count" id="visitor-count">0</span>
</section>

<script>
  // Check if the visitor count is already stored in localStorage
  let visitorCount = localStorage.getItem('visitorCount') || 0;
  visitorCount++;
  localStorage.setItem('visitorCount', visitorCount);
  document.getElementById('visitor-count').innerText = visitorCount;
</script>

<!-- Full Width Image Section -->
<section class="full-width-image">
  <img src="<%= index.background_image_url || 'default-image.jpg' %>" alt="Full Width Image" class="full-width-image">

  <!-- Customer Comment Popups -->
  <div class="customer-comments">
    <div class="customer-comment active">
      <p>"<%= index.comment_1 || 'This is a sample comment.' %>"</p>
    </div>
    <div class="customer-comment">
      <p>"<%= index.comment_2 || 'This is another sample comment.' %>"</p>
    </div>
    <div class="customer-comment">
      <p>"<%= index.comment_3 || 'Here is a third sample comment.' %>"</p>
    </div>

    <!-- Dot Navigation -->
    <div class="slider-dots">
      <span class="dot active"></span>
      <span class="dot"></span>
      <span class="dot"></span>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const comments = document.querySelectorAll('.customer-comment');
    const dots = document.querySelectorAll('.dot');
    let currentIndex = 0;

    function changeSlide() {
      comments.forEach((comment, index) => {
        comment.classList.remove('active');
        dots[index].classList.remove('active');
      });

      comments[currentIndex].classList.add('active');
      dots[currentIndex].classList.add('active');
      currentIndex = (currentIndex + 1) % comments.length;
    }

    setInterval(changeSlide, 5000);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentIndex = index;
        changeSlide();
      });
    });
  });
</script>

