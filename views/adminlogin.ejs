<style>
    .root {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        font-family: kanit;

    }

    .foodimage {
        width: 100%;
        height: 100%;
        border-radius: 20px;
    }

    .box {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;

    }
</style>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</head>
<form action="/admin/check_admin_login" method="post">
    <% if (typeof req.query.message_type !== 'undefined' || typeof req.query.message_text !== 'undefined'  ){ %>
        <div class="alert alert-<%= req.query.message_type %> text-dark  ">
            <%= req.query.message_text %>
        </div>
    <% } %>
    <div class="root">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <img src="/images/pancake.jpg" class="foodimage" />
                </div>
                <div class="col-sm-6">
                    <div class="box">
                        <div style="display: flex; justify-content: center;">
                            <img src="/images/login.png" class="loginimage" width="10%">
                        </div>
                        <div style="font-weight: bold; margin-top:10px; font-size:30px; color:#00b894">
                            ADMINISTRATOR
                        </div>
                        <div style="font-weight: bold; font-size: 20px; color:#30336b">
                            Sign In
                        </div>
                        <div style="width: 70%; margin-top:30px;">
                            <div class="input-group input-group-lg"></div>
                            <input type="text" placeholder="Enter Email/mobile no." name="emailid" class="form-control">
                            <div style="margin-top: 15px;" class="input-group input-group-lg"></div>
                            <input type="password" placeholder="Enter password" name="password" class="form-control">
                        </div>
                        <div style="margin-top:25px; width:70%;">
                            <button type="submit" style="width:100%;" class="btn btn-primary btn-lg">login</button>
                        </div>
                        <button class="btn btn-success mt-3">
                            <a class="text-white " href="/admin/create_admin">create admin</a>
                        </button>
                        <div style="margin-top: 40px; align-self:center; color: red;">
                            <%=message %>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

</html>